{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  //configuraci√≥n de Serilog que se usa en el Program.cs
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/MyServicio-.log",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel":  "Error"
        }
      }
    ]
  }
}
